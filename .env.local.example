# AWS Configuration
DYNAMODB_ACCESS_KEY_ID=your_aws_access_key_id
DYNAMODB_SECRET_ACCESS_KEY=your_aws_secret_access_key
DYNAMODB_REGION=us-east-1

# DynamoDB Tables (optional - defaults provided)
DYNAMODB_USERS_TABLE=mila-users
DYNAMODB_USER_BIOS_TABLE=mila-user-bios
DYNAMODB_USER_PREFERENCES_TABLE=mila-user-preferences
DYNAMODB_SAVED_PLACES_TABLE=mila-saved-places
DYNAMODB_ONBOARDING_SESSIONS_TABLE=mila-onboarding-sessions
DYNAMODB_ONBOARDING_MESSAGES_TABLE=mila-onboarding-messages
DYNAMODB_SUBSCRIPTIONS_TABLE=mila-subscriptions
DYNAMODB_BILLING_HISTORY_TABLE=mila-billing-history
DYNAMODB_RATE_LIMITS_TABLE=mila-rate-limits
DYNAMODB_PLACE_CACHE_TABLE=mila-place-cache

# JWT Secret (change in production)
JWT_SECRET=change-me-in-production-use-long-random-string

# Google OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Google Places API
GOOGLE_PLACES_API_KEY=your_google_places_api_key

# OpenAI
OPENAI_API_KEY=your_openai_api_key

# Paddle (Payment Processing)
PADDLE_CLIENT_TOKEN=your_paddle_client_token
PADDLE_SELLER_ID=your_paddle_seller_id
PADDLE_WEBHOOK_SECRET=your_paddle_webhook_secret
PADDLE_ENVIRONMENT=sandbox # or 'production'

# Paddle Plan IDs
PADDLE_PREMIUM_PLAN_ID=your_premium_plan_id
PADDLE_PAYG_PLAN_ID=your_payg_plan_id

# Booking.com Affiliate (Optional - for hotel promotions)
BOOKING_COM_AFFILIATE_ID=your_booking_affiliate_id

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
